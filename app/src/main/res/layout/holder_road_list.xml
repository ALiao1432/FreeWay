<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/btn_main_padding_top_bottom"
    android:paddingBottom="@dimen/btn_main_padding_top_bottom">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/roadButton"
        style="@style/AppTheme.Main.Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btn_main_margin"
        android:layout_marginEnd="@dimen/btn_main_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Road List" />

</android.support.constraint.ConstraintLayout>